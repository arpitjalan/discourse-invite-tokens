<div id='simple-container'>
  <%if flash[:error]%>
    <div class='alert alert-error'>
      <%=flash[:error].html_safe%>
    </div>
  <%else%>
    <h2><%= t 'activation.welcome_to', site_name: SiteSetting.title %></h2>
    <br/>
    <%= button_to(redeem_invite_token_path, method: :put, params: { email: @email, username: @username, name: @name, topic: @topic }, class: 'btn btn-primary') do %>
      <%= t 'invite.accept_invite' %>
    <% end %>
  <%end%>
</div>
